{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "module": "ESNext",                 // 👈 اصلاح شد
    "moduleResolution": "bundler",      // 👈 برای Vite + Tailwind v4 درست هست
    "baseUrl": "./src",
    "paths": {
      "@Mediatr/*": ["./thirdtools/mediatr/*"],
      "@Fluentvalidator/*": ["./thirdtools/fluentvalidation/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",                 // 👈 اصلاح شد
    "types": ["vite/client"]   ,
             // 👈 اضافه شد
  },
  
  // "exclude": ["node_modules", "lib/**/*.js"],
  // "include": ["src", "test"],
  // "references": [{ "path": "./tsconfig.node.json" }]
}


